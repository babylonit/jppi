---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ContactForm from '../components/ContactForm.astro';

// SEO Metadata
const title = "Contact Us";
const description = "Get in touch with Joana Paper Product Industry for inquiries, quotes, or support. We're here to help with all your paper product and packaging needs.";
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <Hero
    title="Contact Us"
    subtitle="We're here to help with all your paper product and packaging needs."
    backgroundImage="https://images.pexels.com/photos/4064834/pexels-photo-4064834.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
  />
  
  <!-- Contact Section -->
  <section class="section">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div>
          <ContactForm />
        </div>
        
        <!-- Contact Information -->
        <div>
          <div class="bg-white rounded-lg shadow-md p-6 md:p-8 mb-8">
            <h3 class="text-2xl font-semibold mb-6">Contact Information</h3>
            
            <div class="space-y-6">
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <i class="fas fa-map-marker-alt h-6 w-6 text-primary-500" aria-hidden="true"></i>
                </div>
                <div class="ml-4">
                  <h4 class="text-lg font-medium text-gray-900">Address</h4>
                  <p class="mt-1 text-gray-600">123 Industrial Area, Gazipur</p>
                  <p class="text-gray-600">Dhaka, Bangladesh</p>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <i class="fas fa-phone-alt h-6 w-6 text-primary-500" aria-hidden="true"></i>
                </div>
                <div class="ml-4">
                  <h4 class="text-lg font-medium text-gray-900">Phone</h4>
                  <p class="mt-1 text-gray-600">+880 1234-567890</p>
                  <p class="text-gray-600">+880 1234-567891</p>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <i class="fas fa-envelope h-6 w-6 text-primary-500" aria-hidden="true"></i>
                </div>
                <div class="ml-4">
                  <h4 class="text-lg font-medium text-gray-900">Email</h4>
                  <p class="mt-1 text-gray-600">
                    <a href="mailto:info@joanapaper.com" class="hover:text-primary-600">info@joanapaper.com</a>
                  </p>
                  <p class="text-gray-600">
                    <a href="mailto:sales@joanapaper.com" class="hover:text-primary-600">sales@joanapaper.com</a>
                  </p>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <i class="fas fa-clock h-6 w-6 text-primary-500" aria-hidden="true"></i>
                </div>
                <div class="ml-4">
                  <h4 class="text-lg font-medium text-gray-900">Business Hours</h4>
                  <p class="mt-1 text-gray-600">Monday - Friday: 9:00 AM - 6:00 PM</p>
                  <p class="text-gray-600">Saturday: 10:00 AM - 4:00 PM</p>
                  <p class="text-gray-600">Sunday: Closed</p>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Google Map -->
          <div class="bg-white rounded-lg shadow-md overflow-hidden h-80">
           <iframe 
src="https://www.google.com/maps/embedpb=!1m18!1m12!1m3!1d3578.414666954666!2d90.37719747534366!3d24.000812878500362!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3755db9ff4f67bdb%3A0xf0a033dfaef5599a!2sJoana%20Paper%20Product%20Industry!5e1!3m2!1sen!2sbd!4v1748733672439!5m2!1sen!2sbd" 
    width="100%" 
    height="100%" 
    style="border:0;" 
    allowfullscreen="" 
    loading="lazy" 
    referrerpolicy="no-referrer-when-downgrade"
    title="Joana Paper Product Industry location map"
  ></iframe>

          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- FAQ Section -->
  <section class="section bg-gray-50">
    <div class="container">
      <h2 class="section-title">Frequently Asked Questions</h2>
      
      <div class="mt-12 max-w-3xl mx-auto">
        <div class="space-y-6">
          <div class="bg-white rounded-lg shadow-sm p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-2">What is the minimum order quantity?</h3>
            <p class="text-gray-600">Our minimum order quantity varies by product, but generally starts from 2,000 pieces for standard items and can be higher for custom designs.</p>
          </div>
          
          <div class="bg-white rounded-lg shadow-sm p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-2">How long does delivery take?</h3>
            <p class="text-gray-600">For stock items, delivery typically takes 2-3 days. For custom orders, the lead time is usually 20+ days depending on the complexity and quantity.</p>
          </div>
          
          <div class="bg-white rounded-lg shadow-sm p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Do you offer design services?</h3>
            <p class="text-gray-600">Yes, our in-house design team can help create custom designs for your packaging needs. You can also provide your own designs.</p>
          </div>
          
          <div class="bg-white rounded-lg shadow-sm p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Are your products eco-friendly?</h3>
            <p class="text-gray-600">Yes, we use biodegradable materials and eco-friendly inks in our products. We also offer fully recyclable packaging options.</p>
          </div>
          
          <div class="bg-white rounded-lg shadow-sm p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Do you ship internationally?</h3>
            <p class="text-gray-600">We primarily serve the Bangladesh market, but can arrange international shipping for large orders. Please contact us for details.</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>