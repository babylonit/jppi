---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ProductCard from '../components/ProductCard.astro';
import FeatureCard from '../components/FeatureCard.astro';
import CallToAction from '../components/CallToAction.astro';

// Areca palm products
const arecaPalmProducts = [
  {
    title: 'Areca Palm Leaf Plates',
    description: 'Natural, biodegradable plates made from fallen areca palm leaves.',
    image: 'https://images.pexels.com/photos/5677794/pexels-photo-5677794.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    link: '/product/areca-palm-plates'
  },
  {
    title: 'Areca Palm Leaf Tray',
    description: 'Elegant serving trays perfect for catering and food presentation.',
    image: 'https://images.pexels.com/photos/4553618/pexels-photo-4553618.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    link: '/product/areca-palm-trays/'
  },
  {
    title: 'Areca Leaf Bowl',
    description: 'Natural bowls for soups, salads, and various food servings.',
    image: 'https://images.pexels.com/photos/4553277/pexels-photo-4553277.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    link: '/product/areca-palm-bowls/'
  },
  {
    title: 'Partitioned Plate',
    description: 'Multi-compartment plates for complete meal presentations.',
    image: 'https://images.pexels.com/photos/6210548/pexels-photo-6210548.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    link: '/product/partitioned-plates/'
  },
  {
    title: 'Square Plate',
    description: 'Modern square-shaped plates for contemporary food presentation.',
    image: 'https://images.pexels.com/photos/5865126/pexels-photo-5865126.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    link: '/product/square-plates/'
  }
];

// Features
const features = [
  {
    title: '100% Natural',
    description: 'Made from naturally fallen areca palm leaves without any chemicals or additives.',
    icon: 'fas fa-leaf'
  },
  {
    title: 'Biodegradable',
    description: 'Completely compostable within 60 days, leaving no environmental footprint.',
    icon: 'fas fa-recycle'
  },
  {
    title: 'Chemical-Free',
    description: 'No bleaching, coloring, or chemical processing - completely natural production.',
    icon: 'fas fa-shield-alt'
  },
  {
    title: 'Microwave Safe',
    description: 'Safe for microwave heating and suitable for hot and cold foods.',
    icon: 'fas fa-fire'
  },
  {
    title: 'Water Resistant',
    description: 'Natural water resistance without any coating or treatment.',
    icon: 'fas fa-tint'
  },
  {
    title: 'Unique Patterns',
    description: 'Each piece has unique natural patterns and textures from the palm leaf.',
    icon: 'fas fa-palette'
  }
];

// SEO Metadata
const title = "Areca Palm Leaf Products";
const description = "Eco-friendly areca palm leaf plates, bowls, and trays. 100% natural, biodegradable, and chemical-free sustainable tableware made from fallen palm leaves.";
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <Hero
    title="Areca Palm Leaf Products"
    subtitle="Experience the beauty of nature with our 100% natural, biodegradable tableware made from fallen areca palm leaves."
    backgroundImage="https://images.pexels.com/photos/5677794/pexels-photo-5677794.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
  />
  
  <!-- Intro Section -->
  <section class="section">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Nature's Perfect Tableware</h2>
        <p class="text-lg text-gray-600 mb-6">
          Areca palm leaf products represent the perfect harmony between functionality and 
          environmental responsibility. Made from naturally fallen leaves of the areca palm tree, 
          our products offer an elegant, sustainable alternative to conventional disposable tableware.
        </p>
        <p class="text-lg text-gray-600 mb-6">
          Each piece is unique, featuring natural patterns and textures that make your dining 
          experience special while contributing to environmental conservation. No trees are cut, 
          no chemicals are used, and the entire production process is completely eco-friendly.
        </p>
      </div>
    </div>
  </section>
  
  <!-- Products Section -->
  <section class="section bg-gray-50">
    <div class="container">
      <h2 class="section-title">Areca Palm Leaf Collection</h2>
      <p class="section-subtitle">Beautiful, natural tableware that celebrates sustainability and style.</p>
      
      <div class="mt-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {arecaPalmProducts.map(product => (
          <ProductCard 
            title={product.title} 
            description={product.description} 
            image={product.image} 
            link={product.link} 
          />
        ))}
      </div>
    </div>
  </section>
  
  <!-- Features Section -->
  <section class="section">
    <div class="container">
      <h2 class="section-title">Why Choose Areca Palm Leaf Products?</h2>
      <p class="section-subtitle">Sustainable benefits that make a difference for you and the environment.</p>
      
      <div class="mt-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {features.map(feature => (
          <FeatureCard 
            title={feature.title} 
            description={feature.description} 
            icon={feature.icon} 
          />
        ))}
      </div>
    </div>
  </section>
  
  <!-- Manufacturing Process Section -->
  <section class="section bg-gray-50">
    <div class="container">
      <h2 class="section-title">Our Natural Manufacturing Process</h2>
      <p class="section-subtitle">Simple, traditional methods that preserve the natural beauty of areca palm leaves.</p>
      
      <div class="mt-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="bg-white p-6 rounded-lg shadow-md text-center">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-green-600 text-2xl font-bold">1</span>
          </div>
          <h3 class="text-lg font-semibold mb-2">Collection</h3>
          <p class="text-gray-600 text-sm">Naturally fallen areca palm leaves are collected from plantations without harming any trees.</p>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-md text-center">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-green-600 text-2xl font-bold">2</span>
          </div>
          <h3 class="text-lg font-semibold mb-2">Cleaning</h3>
          <p class="text-gray-600 text-sm">Leaves are cleaned with water only, removing dirt and debris while preserving natural properties.</p>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-md text-center">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-green-600 text-2xl font-bold">3</span>
          </div>
          <h3 class="text-lg font-semibold mb-2">Pressing</h3>
          <p class="text-gray-600 text-sm">Heat and pressure are applied to shape the leaves into plates and bowls using traditional molds.</p>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-md text-center">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-green-600 text-2xl font-bold">4</span>
          </div>
          <h3 class="text-lg font-semibold mb-2">Finishing</h3>
          <p class="text-gray-600 text-sm">Products are trimmed and quality-checked, resulting in beautiful, ready-to-use tableware.</p>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Applications Section -->
  <section class="section">
    <div class="container">
      <h2 class="section-title">Perfect for Every Occasion</h2>
      <p class="section-subtitle">Versatile tableware that enhances any dining experience.</p>
      
      <div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white p-6 rounded-lg shadow-md border-t-4 border-green-500">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mb-4">
            <i class="fas fa-utensils text-green-600 text-2xl"></i>
          </div>
          <h3 class="text-xl font-semibold mb-3">Restaurants & Cafes</h3>
          <ul class="space-y-2 text-gray-600 text-sm">
            <li>• Eco-conscious dining experiences</li>
            <li>• Unique presentation for special dishes</li>
            <li>• Appeal to environmentally aware customers</li>
            <li>• Reduce plastic waste in food service</li>
          </ul>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-md border-t-4 border-green-500">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mb-4">
            <i class="fas fa-glass-cheers text-green-600 text-2xl"></i>
          </div>
          <h3 class="text-xl font-semibold mb-3">Events & Catering</h3>
          <ul class="space-y-2 text-gray-600 text-sm">
            <li>• Weddings and special celebrations</li>
            <li>• Outdoor events and picnics</li>
            <li>• Corporate eco-friendly events</li>
            <li>• Festival and cultural gatherings</li>
          </ul>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-md border-t-4 border-green-500">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mb-4">
            <i class="fas fa-home text-green-600 text-2xl"></i>
          </div>
          <h3 class="text-xl font-semibold mb-3">Home & Personal Use</h3>
          <ul class="space-y-2 text-gray-600 text-sm">
            <li>• Sustainable household dining</li>
            <li>• Garden parties and barbecues</li>
            <li>• Children's eco-education</li>
            <li>• Camping and outdoor adventures</li>
          </ul>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Environmental Impact Section -->
  <section class="section bg-green-50">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-bold mb-6 text-green-800">Environmental Impact</h2>
          <p class="text-lg text-gray-700 mb-6">
            By choosing areca palm leaf products, you're making a positive impact on the environment. 
            Each plate saves plastic from entering landfills and oceans while supporting sustainable 
            rural communities that collect and process the leaves.
          </p>
          
          <div class="space-y-4">
            <div class="flex items-start">
              <div class="flex-shrink-0 w-8 h-8 bg-green-500 rounded-full flex items-center justify-center mr-4">
                <i class="fas fa-leaf text-white text-sm"></i>
              </div>
              <div>
                <h3 class="font-semibold text-green-800 mb-1">Zero Waste Production</h3>
                <p class="text-gray-700">No trees are cut, no chemicals used, only naturally fallen leaves.</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="flex-shrink-0 w-8 h-8 bg-green-500 rounded-full flex items-center justify-center mr-4">
                <i class="fas fa-recycle text-white text-sm"></i>
              </div>
              <div>
                <h3 class="font-semibold text-green-800 mb-1">Rapid Biodegradation</h3>
                <p class="text-gray-700">Completely decomposes in 60 days, enriching soil naturally.</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="flex-shrink-0 w-8 h-8 bg-green-500 rounded-full flex items-center justify-center mr-4">
                <i class="fas fa-users text-white text-sm"></i>
              </div>
              <div>
                <h3 class="font-semibold text-green-800 mb-1">Community Support</h3>
                <p class="text-gray-700">Provides sustainable income to rural communities.</p>
              </div>
            </div>
          </div>
        </div>
        
        <div class="relative">
          <img 
            src="https://images.pexels.com/photos/4553618/pexels-photo-4553618.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" 
            alt="Areca palm trees and sustainable production" 
            class="rounded-lg shadow-xl w-full"
          />
        </div>
      </div>
    </div>
  </section>
  
  <!-- Call to Action -->
  <CallToAction
    title="Join the Sustainable Dining Revolution"
    description="Choose areca palm leaf products for your business or events and make a positive environmental impact."
    buttonText="Get Eco-Friendly Quote"
    buttonLink="/contact"
    secondaryButtonText="Learn More About Sustainability"
    secondaryButtonLink="/contact?type=sustainability"
  />
</Layout>