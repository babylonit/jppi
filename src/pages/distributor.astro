---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import CallToAction from '../components/CallToAction.astro';

// SEO Metadata
const title = "Become a Distributor";
const description = "Join Joana Paper Product Industry's distributor network. Expand your business by selling our high-quality paper products and packaging solutions in your region.";
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <Hero
    title="Become a Distributor"
    subtitle="Join our network and help bring quality paper products to businesses across Bangladesh."
    backgroundImage="https://images.pexels.com/photos/5668858/pexels-photo-5668858.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
  />
  
  <!-- Main Content -->
  <section class="section">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Application Form -->
        <div>
          <div class="bg-white rounded-lg shadow-md p-6 md:p-8">
            <h3 class="text-2xl font-semibold mb-6">Distributor Application</h3>
            
            <form id="distributor-form" class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="firstName" class="block text-sm font-medium text-gray-700 mb-1">First Name</label>
                  <input 
                    type="text" 
                    id="firstName" 
                    name="firstName" 
                    required
                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
                  />
                </div>
                
                <div>
                  <label for="lastName" class="block text-sm font-medium text-gray-700 mb-1">Last Name</label>
                  <input 
                    type="text" 
                    id="lastName" 
                    name="lastName" 
                    required
                    class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
                  />
                </div>
              </div>
              
              <div>
                <label for="companyName" class="block text-sm font-medium text-gray-700 mb-1">Company Name</label>
                <input 
                  type="text" 
                  id="companyName" 
                  name="companyName" 
                  required
                  class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
                />
              </div>
              
              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  required
                  class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
                />
              </div>
              
              <div>
                <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Phone Number</label>
                <input 
                  type="tel" 
                  id="phone" 
                  name="phone"
                  required
                  class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
                />
              </div>
              
              <div>
                <label for="address" class="block text-sm font-medium text-gray-700 mb-1">Business Address</label>
                <textarea 
                  id="address" 
                  name="address" 
                  rows="3" 
                  required
                  class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
                ></textarea>
              </div>
              
              <div>
                <label for="region" class="block text-sm font-medium text-gray-700 mb-1">Distribution Region</label>
                <input 
                  type="text" 
                  id="region" 
                  name="region" 
                  required
                  placeholder="City, District, or Division"
                  class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
                />
              </div>
              
              <div>
                <label for="experience" class="block text-sm font-medium text-gray-700 mb-1">Years in Business</label>
                <select 
                  id="experience" 
                  name="experience" 
                  required
                  class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
                >
                  <option value="">Select experience</option>
                  <option value="Less than 1 year">Less than 1 year</option>
                  <option value="1-3 years">1-3 years</option>
                  <option value="3-5 years">3-5 years</option>
                  <option value="5-10 years">5-10 years</option>
                  <option value="10+ years">10+ years</option>
                </select>
              </div>
              
              <div>
                <label for="productInterest" class="block text-sm font-medium text-gray-700 mb-1">Products of Interest</label>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mt-2">
                  <div class="flex items-start">
                    <input 
                      type="checkbox" 
                      id="paperCups" 
                      name="productInterest" 
                      value="Paper Cups"
                      class="mt-1 h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded"
                    />
                    <label for="paperCups" class="ml-2 text-sm text-gray-700">Paper Cups</label>
                  </div>
                  
                  <div class="flex items-start">
                    <input 
                      type="checkbox" 
                      id="paperPlates" 
                      name="productInterest" 
                      value="Paper Plates"
                      class="mt-1 h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded"
                    />
                    <label for="paperPlates" class="ml-2 text-sm text-gray-700">Paper Plates</label>
                  </div>
                  
                  <div class="flex items-start">
                    <input 
                      type="checkbox" 
                      id="lunchBoxes" 
                      name="productInterest" 
                      value="Lunch Boxes"
                      class="mt-1 h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded"
                    />
                    <label for="lunchBoxes" class="ml-2 text-sm text-gray-700">Lunch Boxes</label>
                  </div>
                  
                  <div class="flex items-start">
                    <input 
                      type="checkbox" 
                      id="pizzaBoxes" 
                      name="productInterest" 
                      value="Pizza Boxes"
                      class="mt-1 h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded"
                    />
                    <label for="pizzaBoxes" class="ml-2 text-sm text-gray-700">Pizza Boxes</label>
                  </div>
                  
                  <div class="flex items-start">
                    <input 
                      type="checkbox" 
                      id="foodContainers" 
                      name="productInterest" 
                      value="Food Containers"
                      class="mt-1 h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded"
                    />
                    <label for="foodContainers" class="ml-2 text-sm text-gray-700">Food Containers</label>
                  </div>
                  
                  <div class="flex items-start">
                    <input 
                      type="checkbox" 
                      id="customPackaging" 
                      name="productInterest" 
                      value="Custom Packaging"
                      class="mt-1 h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded"
                    />
                    <label for="customPackaging" class="ml-2 text-sm text-gray-700">Custom Packaging</label>
                  </div>
                </div>
              </div>
              
              <div>
                <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Additional Information</label>
                <textarea 
                  id="message" 
                  name="message" 
                  rows="4" 
                  placeholder="Tell us about your distribution network, target customers, and why you want to become our distributor."
                  class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-primary-500 focus:border-primary-500"
                ></textarea>
              </div>
              
              <div>
                <button 
                  type="submit"
                  class="w-full btn btn-primary"
                >
                  Submit Application
                </button>
              </div>
            </form>
            
            <div id="form-success" class="hidden mt-4 p-4 bg-green-50 text-green-700 rounded-md">
              Thank you for your application! Our team will review your information and contact you within 3-5 business days.
            </div>
            
            <div id="form-error" class="hidden mt-4 p-4 bg-red-50 text-red-700 rounded-md">
              There was an error submitting your application. Please try again or contact us directly.
            </div>
          </div>
        </div>
        
        <!-- Information Section -->
        <div class="space-y-8">
          <div class="bg-white rounded-lg shadow-md p-6 md:p-8">
            <h3 class="text-2xl font-semibold mb-4">Why Become Our Distributor?</h3>
            <ul class="space-y-4">
              <li class="flex items-start">
                <div class="flex-shrink-0 mt-1">
                  <i class="fas fa-check-circle text-primary-500" aria-hidden="true"></i>
                </div>
                <p class="ml-3 text-gray-700">
                  <span class="font-medium text-gray-900">Exclusive Territory Rights:</span> Secure exclusive distribution rights in your region.
                </p>
              </li>
              <li class="flex items-start">
                <div class="flex-shrink-0 mt-1">
                  <i class="fas fa-check-circle text-primary-500" aria-hidden="true"></i>
                </div>
                <p class="ml-3 text-gray-700">
                  <span class="font-medium text-gray-900">Competitive Pricing:</span> Access wholesale pricing with attractive margins.
                </p>
              </li>
              <li class="flex items-start">
                <div class="flex-shrink-0 mt-1">
                  <i class="fas fa-check-circle text-primary-500" aria-hidden="true"></i>
                </div>
                <p class="ml-3 text-gray-700">
                  <span class="font-medium text-gray-900">Marketing Support:</span> Receive sales materials, product training, and marketing assistance.
                </p>
              </li>
              <li class="flex items-start">
                <div class="flex-shrink-0 mt-1">
                  <i class="fas fa-check-circle text-primary-500" aria-hidden="true"></i>
                </div>
                <p class="ml-3 text-gray-700">
                  <span class="font-medium text-gray-900">Growing Market:</span> Enter the rapidly expanding eco-friendly packaging market.
                </p>
              </li>
              <li class="flex items-start">
                <div class="flex-shrink-0 mt-1">
                  <i class="fas fa-check-circle text-primary-500" aria-hidden="true"></i>
                </div>
                <p class="ml-3 text-gray-700">
                  <span class="font-medium text-gray-900">Quality Products:</span> Represent internationally certified products trusted by leading brands.
                </p>
              </li>
            </ul>
          </div>
          
          <div class="bg-white rounded-lg shadow-md p-6 md:p-8">
            <h3 class="text-2xl font-semibold mb-4">Requirements</h3>
            <ul class="space-y-4">
              <li class="flex items-start">
                <div class="flex-shrink-0 mt-1">
                  <i class="fas fa-arrow-right text-primary-500" aria-hidden="true"></i>
                </div>
                <p class="ml-3 text-gray-700">
                  Established business with proper registration and trade license
                </p>
              </li>
              <li class="flex items-start">
                <div class="flex-shrink-0 mt-1">
                  <i class="fas fa-arrow-right text-primary-500" aria-hidden="true"></i>
                </div>
                <p class="ml-3 text-gray-700">
                  Existing distribution network or retail presence in your region
                </p>
              </li>
              <li class="flex items-start">
                <div class="flex-shrink-0 mt-1">
                  <i class="fas fa-arrow-right text-primary-500" aria-hidden="true"></i>
                </div>
                <p class="ml-3 text-gray-700">
                  Adequate storage facilities and transportation capabilities
                </p>
              </li>
              <li class="flex items-start">
                <div class="flex-shrink-0 mt-1">
                  <i class="fas fa-arrow-right text-primary-500" aria-hidden="true"></i>
                </div>
                <p class="ml-3 text-gray-700">
                  Commitment to minimum order quantities and sales targets
                </p>
              </li>
              <li class="flex items-start">
                <div class="flex-shrink-0 mt-1">
                  <i class="fas fa-arrow-right text-primary-500" aria-hidden="true"></i>
                </div>
                <p class="ml-3 text-gray-700">
                  Willingness to promote Joana Paper products in your market
                </p>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Distributor Benefits Section -->
  <section class="section bg-gray-50">
    <div class="container">
      <h2 class="section-title">Distributor Program Benefits</h2>
      
      <div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white p-6 rounded-lg shadow-md text-center">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-percentage text-primary-600 text-2xl" aria-hidden="true"></i>
          </div>
          <h3 class="text-xl font-semibold mb-2">Competitive Margins</h3>
          <p class="text-gray-600">Earn attractive profit margins on all product categories with volume-based pricing tiers.</p>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-md text-center">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-handshake text-primary-600 text-2xl" aria-hidden="true"></i>
          </div>
          <h3 class="text-xl font-semibold mb-2">Partnership Support</h3>
          <p class="text-gray-600">Dedicated account manager, regular business reviews, and continuous improvement programs.</p>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-md text-center">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-bullhorn text-primary-600 text-2xl" aria-hidden="true"></i>
          </div>
          <h3 class="text-xl font-semibold mb-2">Marketing Materials</h3>
          <p class="text-gray-600">Access to product catalogs, brochures, samples, and digital marketing assets for your sales efforts.</p>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Testimonial Section -->
  <section class="section">
    <div class="container">
      <h2 class="section-title">What Our Distributors Say</h2>
      
      <div class="mt-12 grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="flex justify-center mb-6">
            <i class="fas fa-quote-right text-primary-500 h-8 w-8" aria-hidden="true"></i>
          </div>
          
          <blockquote>
            <p class="text-gray-700 text-lg leading-relaxed mb-6">
              "Becoming a Joana Paper distributor was one of the best business decisions I've made. The products are high quality, and the support from the company has helped us expand our customer base significantly."
            </p>
          </blockquote>
          
          <div class="flex items-center">
            <div>
              <p class="font-semibold text-gray-900">Abul Hassan</p>
              <p class="text-gray-600 text-sm">Regional Distributor, Chittagong</p>
            </div>
          </div>
        </div>
        
        <div class="bg-white rounded-lg shadow-md p-6">
          <div class="flex justify-center mb-6">
            <i class="fas fa-quote-right text-primary-500 h-8 w-8" aria-hidden="true"></i>
          </div>
          
          <blockquote>
            <p class="text-gray-700 text-lg leading-relaxed mb-6">
              "The increasing demand for eco-friendly packaging has made our partnership with Joana Paper extremely valuable. Their consistent quality and timely deliveries have helped us maintain strong relationships with our customers."
            </p>
          </blockquote>
          
          <div class="flex items-center">
            <div>
              <p class="font-semibold text-gray-900">Nasreen Akter</p>
              <p class="text-gray-600 text-sm">District Distributor, Sylhet</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Call to Action -->
  <CallToAction
    title="Ready to Grow Your Business With Us?"
    description="Apply today to become a Joana Paper Product Industry distributor and join our growing network of partners."
    buttonText="Apply Now"
    buttonLink="#distributor-form"
    secondaryButtonText="Contact Sales Team"
    secondaryButtonLink="/contact"
  />
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('distributor-form');
    const successMessage = document.getElementById('form-success');
    const errorMessage = document.getElementById('form-error');
    
    if (form) {
      form.addEventListener('submit', (e) => {
        e.preventDefault();
        
        // In a real implementation, you would send the form data to a server
        // For this demo, we'll simulate a successful submission
        
        // Hide any existing messages
        if (successMessage) successMessage.classList.add('hidden');
        if (errorMessage) errorMessage.classList.add('hidden');
        
        // Simulate form submission (would be an API call in production)
        setTimeout(() => {
          // Show success message
          if (successMessage) {
            successMessage.classList.remove('hidden');
            
            // Reset form
            form.reset();
            
            // Scroll to success message
            successMessage.scrollIntoView({ behavior: 'smooth', block: 'center' });
          }
        }, 1000);
      });
    }
    
    // Handle anchor links for "Apply Now" button
    const applyNowButton = document.querySelector('a[href="#distributor-form"]');
    if (applyNowButton) {
      applyNowButton.addEventListener('click', (e) => {
        e.preventDefault();
        const formElement = document.getElementById('distributor-form');
        if (formElement) {
          formElement.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }
      });
    }
  });
</script>