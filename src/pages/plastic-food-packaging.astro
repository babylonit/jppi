---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ProductCard from '../components/ProductCard.astro';
import FeatureCard from '../components/FeatureCard.astro';
import CallToAction from '../components/CallToAction.astro';

// ALL 13 plastic food packaging products as individual cards
const plasticPackagingProducts = [
  {
    title: 'Container/Box',
    description: 'Versatile plastic containers and boxes for various food storage and takeaway needs.',
    image: '/images/Plastic Products/Food-Container-300x300.webp',
    link: '/plastic-food-packaging/'
  },
  {
    title: 'Plastic Cups',
    description: 'Clear and colored plastic cups for beverages, desserts, and cold drinks.',
    image: '/images/Plastic Products/plastic-cups.avif',
    link: '/product/plastic-cups/'
  },
  {
    title: 'Takeaway Spoon',
    description: 'Disposable plastic spoons perfect for takeaway meals and food service.',
    image: '/images/Plastic Products/plastic-spoons-3.jpeg',
    link: '/product/takeaway-spoons'
  },
  {
    title: 'Straws',
    description: 'Various plastic straws for beverages and drink service applications.',
    image: '/images/Plastic Products/plastic-straws.jpg',
    link: '/product/straws/'
  },
  {
    title: 'Strailer',
    description: 'Specialized strainer accessories for beverage preparation and service.',
    image: '/images/Plastic Products/Plastic-straw-1.avif',
    link: '/product/strailers'
  },
  {
    title: 'Ice Cream Boxes',
    description: 'Specialized containers designed for ice cream and frozen dessert packaging.',
    image: '/images/Plastic Products/plastic-icecream-box-1.jpg',
    link: '/product/ice-cream-boxes/'
  },
  {
    title: 'Pizza Lid Support',
    description: 'Small plastic supports that prevent pizza box lids from touching the pizza.',
    image: '/images/Plastic Products/plastic-pizza-lead-support.jpg',
    link: '/product/pizza-lid-support'
  },
  {
    title: 'Water Bottles',
