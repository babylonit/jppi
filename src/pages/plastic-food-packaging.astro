    image: '/images/Plastic Products/watter-bottle.jpg',
    link: '/product/water-bottles'
  },
  {
    title: 'Food Tray 4 Unit With Lid',
    description: 'Multi-compartment food trays with secure lids for complete meal packaging.',
    image: '/images/Plastic Products/4tray-food-container.avif',
    link: '/products/4-unit-food-tray'
  },
  {
    title: 'Dry Cake Biscuit Tray',
    description: 'Specialized plastic trays designed for dry cakes, biscuits, and bakery items.',
    image: '/images/Plastic Products/dry-cake-pastry-containers-500x500.webp',
    link: '/product/dry-cake-biscuit-tray/'
  },
  {
    title: 'Thai Burger Box',
    description: 'Specialized plastic containers designed for Thai-style burgers and similar foods.',
    image: '/images/Plastic Products/THAI-PLASTIC-Burger-Pack.jpg',
    link: '/product/thai-burger-box/'
  },
  {
    title: 'Egg Tray',
    description: 'Plastic trays specifically designed for safe egg storage and transport.',
    image: '/images/Plastic Products/plastic-egg-tray.png',
    link: '/product/egg-tray/'
  },
  {
    title: 'Sandwich Box',
    description: 'Compact plastic boxes perfect for sandwich packaging and takeaway meals.',
    image: 'https://images.pexels.com/photos/4393464/pexels-photo-4393464.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    link: '/product/sandwich-box/'
  }
];

// Features
const features = [
  {
    title: 'Food-Grade Safety',
    description: 'All products are made from FDA-approved, food-safe plastic materials.',
    icon: 'fas fa-shield-alt'
  },
  {
    title: 'Temperature Resistant',
    description: 'Suitable for hot and cold foods with excellent temperature resistance.',
    icon: 'fas fa-thermometer-half'
  },
  {
    title: 'Leak-Proof Design',
    description: 'Secure sealing mechanisms prevent spills and maintain food freshness.',
    icon: 'fas fa-lock'
  },
  {
    title: 'Crystal Clear',
    description: 'Transparent options allow for excellent product visibility and presentation.',
    icon: 'fas fa-eye'
  },
  {
    title: 'Microwave Safe',
    description: 'Selected products are microwave-safe for convenient reheating.',
    icon: 'fas fa-fire'
  },
  {
    title: 'Cost-Effective',
    description: 'Affordable bulk pricing for restaurants and food service businesses.',
    icon: 'fas fa-dollar-sign'
  }
];

// SEO Metadata
const title = "Plastic Food Packaging Solutions";
const description = "Complete range of plastic food packaging including containers, cups, spoons, straws, ice cream boxes, trays, and specialized items. Food-safe, durable solutions for food service.";
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <Hero
    title="Plastic Food Packaging Solutions"
    subtitle="Complete range of durable, food-safe plastic packaging designed for modern food service operations."
    backgroundImage="https://images.pexels.com/photos/4393021/pexels-photo-4393021.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
  />
  
  <!-- Intro Section -->
  <section class="section">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Complete Plastic Packaging Range</h2>
        <p class="text-lg text-gray-600 mb-6">
          Our comprehensive plastic food packaging collection provides the durability, safety, and functionality 
          that busy food service operations require. From basic containers to specialized items like pizza lid 
          supports, each product is designed to maintain food quality while offering convenience.
        </p>
        <p class="text-lg text-gray-600 mb-6">
          All our plastic products are manufactured using food-grade materials that meet strict safety standards. 
          Whether you need standard takeaway containers or specialized packaging for unique food items, 
          we provide reliable solutions at competitive prices.
        </p>
      </div>
    </div>
  </section>
  
  <!-- All Products Section -->
  <section class="section bg-gray-50">
    <div class="container">
      <h2 class="section-title">Our Complete Plastic Packaging Range</h2>
      <p class="section-subtitle">All 13 plastic food packaging products available for your food service needs.</p>
      
      <div class="mt-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        {plasticPackagingProducts.map(product => (
          <ProductCard 
            title={product.title} 
            description={product.description} 
            image={product.image} 
            link={product.link} 
          />
        ))}
      </div>
      
      <!-- Product Count Info -->
      <div class="mt-8 text-center">
        <p class="text-lg text-gray-600">
          <span class="font-semibold text-primary-600">{plasticPackagingProducts.length} products</span> 
          available for immediate order
        </p>
      </div>
    </div>
  </section>
  
  <!-- Features Section -->
  <section class="section">
    <div class="container">
      <h2 class="section-title">Product Features & Benefits</h2>
      <p class="section-subtitle">Quality characteristics that make our plastic packaging reliable and practical.</p>
      
      <div class="mt-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {features.map(feature => (
          <FeatureCard 
            title={feature.title} 
            description={feature.description} 
            icon={feature.icon} 
          />
        ))}
      </div>
    </div>
  </section>
  
  <!-- Applications Section -->
  <section class="section bg-gray-50">
    <div class="container">
      <h2 class="section-title">Industry Applications</h2>
      <p class="section-subtitle">Plastic packaging solutions for various food service sectors.</p>
      
      <div class="mt-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="bg-white p-6 rounded-lg shadow-md text-center border-t-4 border-primary-500">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-utensils text-primary-600 text-2xl"></i>
          </div>
          <h3 class="text-lg font-semibold mb-2">Restaurants</h3>
          <p class="text-gray-600 text-sm">Takeaway containers, cups, and cutlery for dine-in and delivery services.</p>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-md text-center border-t-4 border-primary-500">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-ice-cream text-primary-600 text-2xl"></i>
          </div>
          <h3 class="text-lg font-semibold mb-2">Dessert Shops</h3>
          <p class="text-gray-600 text-sm">Ice cream boxes, dessert cups, and specialized frozen treat packaging.</p>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-md text-center border-t-4 border-primary-500">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-motorcycle text-primary-600 text-2xl"></i>
          </div>
          <h3 class="text-lg font-semibold mb-2">Delivery Services</h3>
          <p class="text-gray-600 text-sm">Leak-proof containers and secure packaging for food delivery operations.</p>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-md text-center border-t-4 border-primary-500">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-glass-cheers text-primary-600 text-2xl"></i>
          </div>
          <h3 class="text-lg font-semibold mb-2">Events & Catering</h3>
          <p class="text-gray-600 text-sm">Bulk packaging solutions for large events, parties, and catering services.</p>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Specifications Section -->
  <section class="section">
    <div class="container">
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="px-6 py-4 bg-primary-50 border-b border-primary-100">
          <h3 class="text-xl font-semibold text-primary-800">Technical Specifications</h3>
        </div>
        <div class="p-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <h4 class="font-semibold text-gray-900 mb-2">Material Standards</h4>
              <ul class="space-y-2 text-gray-600">
                <li class="flex items-start">
                  <i class="fas fa-check h-5 w-5 text-primary-500 mr-2 mt-0.5"></i>
                  Food-grade PP (Polypropylene)
                </li>
                <li class="flex items-start">
                  <i class="fas fa-check h-5 w-5 text-primary-500 mr-2 mt-0.5"></i>
                  BPA-free PET (Polyethylene Terephthalate)
                </li>
                <li class="flex items-start">
                  <i class="fas fa-check h-5 w-5 text-primary-500 mr-2 mt-0.5"></i>
                  FDA-approved raw materials
                </li>
                <li class="flex items-start">
                  <i class="fas fa-check h-5 w-5 text-primary-500 mr-2 mt-0.5"></i>
                  ISO 9001 certified manufacturing
                </li>
              </ul>
            </div>
            
            <div>
              <h4 class="font-semibold text-gray-900 mb-2">Performance Features</h4>
              <ul class="space-y-2 text-gray-600">
                <li class="flex items-start">
                  <i class="fas fa-check h-5 w-5 text-primary-500 mr-2 mt-0.5"></i>
                  Temperature range: -18°C to +100°C
                </li>
                <li class="flex items-start">
                  <i class="fas fa-check h-5 w-5 text-primary-500 mr-2 mt-0.5"></i>
                  Microwave safe (selected items)
                </li>
                <li class="flex items-start">
                  <i class="fas fa-check h-5 w-5 text-primary-500 mr-2 mt-0.5"></i>
                  Freezer safe for storage
                </li>
                <li class="flex items-start">
                  <i class="fas fa-check h-5 w-5 text-primary-500 mr-2 mt-0.5"></i>
                  Leak-proof sealing technology
                </li>
              </ul>
            </div>
          </div>
          
          <div class="mt-6 pt-6 border-t border-gray-200">
            <h4 class="font-semibold text-gray-900 mb-2">Order Information</h4>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
              <div>
                <span class="font-medium">Minimum Order:</span> 5,000 pieces
              </div>
              <div>
                <span class="font-medium">Lead Time:</span> 10-15 business days
              </div>
              <div>
                <span class="font-medium">Packaging:</span> Bulk cartons available
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Product Categories Summary -->
  <section class="section bg-gray-50">
    <div class="container">
      <h2 class="section-title">Product Categories Summary</h2>
      <p class="section-subtitle">Our 13 plastic food packaging products organized by type.</p>
      
      <div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-semibold mb-4 text-primary-600 border-b border-primary-100 pb-2">
            Containers & Boxes (6 items)
          </h3>
          <ul class="space-y-2 text-sm text-gray-700">
            <li>• Container/box</li>
            <li>• Thai Burger Box</li>
            <li>• Sandwich Box</li>
            <li>• Food Tray 4 Unit With Lid</li>
            <li>• Dry Cake Biscuit Tray</li>
            <li>• Egg Tray</li>
          </ul>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-semibold mb-4 text-primary-600 border-b border-primary-100 pb-2">
            Cups & Bottles (3 items)
          </h3>
          <ul class="space-y-2 text-sm text-gray-700">
            <li>• Plastic Cups</li>
            <li>• Water Bottles</li>
            <li>• Ice Cream Boxes</li>
          </ul>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-semibold mb-4 text-primary-600 border-b border-primary-100 pb-2">
            Cutlery & Accessories (4 items)
          </h3>
          <ul class="space-y-2 text-sm text-gray-700">
            <li>• Takeaway Container Spoon</li>
            <li>• Straws</li>
            <li>• Strailer</li>
            <li>• Pizza Lid Support</li>
          </ul>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Call to Action -->
  <CallToAction
    title="Need Reliable Plastic Packaging?"
    description="Get dependable plastic food packaging solutions that meet your business needs and budget requirements."
    buttonText="Request Quote"
    buttonLink="/contact"
    secondaryButtonText="Product Catalog"
    secondaryButtonLink="/contact?type=catalog"
  />
</Layout>