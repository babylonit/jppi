// Other product data
const otherProducts = [
  {
    title: 'Paper Plates',
    description: 'Biodegradable paper plates in various sizes for food service.',
    image: 'https://images.pexels.com/photos/5677794/pexels-photo-5677794.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
