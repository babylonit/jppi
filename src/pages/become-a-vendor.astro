<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Vendor form submission
    const vendorForm = document.getElementById('vendor-form');
    const successMessage = document.getElementById('vendor-form-success');
    const errorMessage = document.getElementById('vendor-form-error');
    
    if (vendorForm) {
      vendorForm.addEventListener('submit', (e) => {
        e.preventDefault();
        
        // Hide any existing messages
        if (successMessage) successMessage.classList.add('hidden');
        if (errorMessage) errorMessage.classList.add('hidden');
        
        // Simulate form submission
        setTimeout(() => {
          // Generate application ID
          const appId = 'VP-2024-' + Math.floor(Math.random() * 1000).toString().padStart(3, '0');
          document.getElementById('application-id').textContent = appId;
          
          // Show success message
          if (successMessage) {
            successMessage.classList.remove('hidden');
            
            // Scroll to success message
            successMessage.scrollIntoView({ behavior: 'smooth', block: 'center' });
            
            // Reset form
            vendorForm.reset();
          }
        }, 1500);
      });
    }
    
    // Vendor FAQ accordion
    const vendorFaqQuestions = document.querySelectorAll('.vendor-faq-question');
    
    vendorFaqQuestions.forEach(question => {
      question.addEventListener('click', () => {
        // Toggle current question
        question.classList.toggle('active');
      });
    });
  });
</script>