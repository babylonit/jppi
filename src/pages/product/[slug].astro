---
import Layout from '../../layouts/Layout.astro';
import { getProductBySlug, getRelatedProducts, products } from '../../data/products';
import ProductCard from '../../components/ProductCard.astro';
import CallToAction from '../../components/CallToAction.astro';

export async function getStaticPaths() {
  return products.map((product) => ({
    params: { slug: product.slug },
    props: { product },
  }));
}

const { slug } = Astro.params;
const product = getProductBySlug(slug);

if (!product) {
  return Astro.redirect('/404');
}

const relatedProducts = getRelatedProducts(product.slug).slice(0, 4);

// SEO data
const title = product.seoTitle || `${product.name} | Joana Paper Product Industry`;
const description = product.seoDescription || product.shortDescription;

// Category display names
const categoryNames = {
  'paper-cups': 'Paper Cups',
  'food-packaging': 'Food Packaging',
  'office-stationery': 'Office Stationery',
  'eco-products': 'Eco Products',
  'plastic-packaging': 'Plastic Packaging',
  'retail-packaging': 'Retail Packaging',
  'medical-packaging': 'Medical Packaging',
  'marketing-materials': 'Marketing Materials'
};

const categoryName = categoryNames[product.category] || product.category;
---

<Layout title={title} description={description}>
  <!-- Breadcrumb -->
  <nav class="bg-gray-50 py-4">
    <div class="container">
      <ol class="flex items-center space-x-2 text-sm">
        <li><a href="/" class="text-gray-600 hover:text-primary-600">Home</a></li>
        <li><i class="fas fa-chevron-right text-gray-400 text-xs"></i></li>
        <li><a href={`/category/${product.category}`} class="text-gray-600 hover:text-primary-600">{categoryName}</a></li>
        <li><i class="fas fa-chevron-right text-gray-400 text-xs"></i></li>
        <li class="text-gray-900 font-medium">{product.name}</li>
      </ol>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class="section bg-white">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">
        <!-- Product Image Gallery -->
        <div class="space-y-4">
          <!-- Main Image -->
          <div class="aspect-w-16 aspect-h-12 bg-gray-100 rounded-lg overflow-hidden">
            <img 
              id="main-product-image"
              src={product.images[0]} 
              alt={product.name}
              class="w-full h-full object-cover"
            />
          </div>
          
          <!-- Thumbnail Gallery -->
          {product.images.length > 1 && (
            <div class="grid grid-cols-4 gap-2">
              {product.images.map((image, index) => (
                <button 
                  class="aspect-w-1 aspect-h-1 bg-gray-100 rounded-md overflow-hidden border-2 border-transparent hover:border-primary-500 transition-colors thumbnail-btn"
                  data-image={image}
                >
                  <img 
                    src={image} 
                    alt={`${product.name} view ${index + 1}`}
                    class="w-full h-full object-cover"
                  />
                </button>
              ))}
            </div>
          )}
        </div>

        <!-- Product Information -->
        <div class="space-y-6">
          <!-- Product Name & Short Description -->
          <div>
            <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">{product.name}</h1>
            <p class="text-lg text-gray-600 leading-relaxed">{product.shortDescription}</p>
            
            <!-- Category Badge -->
            <div class="mt-4">
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-primary-100 text-primary-800">
                <i class="fas fa-tag mr-1 text-xs"></i>
                {categoryName}
              </span>
            </div>
          </div>

          <!-- Pricing (if available) -->
          {product.price && (
            <div class="bg-gray-50 p-4 rounded-lg">
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-600">Price Range:</span>
                <span class="text-lg font-semibold text-primary-600">{product.price.currency} {product.price.range}</span>
              </div>
              {product.price.note && (
                <p class="text-xs text-gray-500 mt-1">{product.price.note}</p>
              )}
            </div>
          )}

          <!-- Specifications Table -->
          <div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
            <div class="bg-gray-50 px-4 py-3 border-b border-gray-200">
              <h3 class="text-lg font-semibold text-gray-900">Specifications</h3>
            </div>
            <div class="p-4">
              <dl class="space-y-3">
                {product.specifications.capacity && (
                  <div class="flex justify-between py-2 border-b border-gray-100">
                    <dt class="text-sm font-medium text-gray-600">Capacity:</dt>
                    <dd class="text-sm text-gray-900">{product.specifications.capacity}</dd>
                  </div>
                )}
                {product.specifications.size && (
                  <div class="flex justify-between py-2 border-b border-gray-100">
                    <dt class="text-sm font-medium text-gray-600">Size:</dt>
                    <dd class="text-sm text-gray-900">{product.specifications.size}</dd>
                  </div>
                )}
                {product.specifications.material && (
                  <div class="flex justify-between py-2 border-b border-gray-100">
                    <dt class="text-sm font-medium text-gray-600">Material:</dt>
                    <dd class="text-sm text-gray-900">{product.specifications.material}</dd>
                  </div>
                )}
                {product.specifications.moq && (
                  <div class="flex justify-between py-2 border-b border-gray-100">
                    <dt class="text-sm font-medium text-gray-600">Min. Order:</dt>
                    <dd class="text-sm text-gray-900">{product.specifications.moq}</dd>
                  </div>
                )}
                {product.specifications.leadTime && (
                  <div class="flex justify-between py-2 border-b border-gray-100">
                    <dt class="text-sm font-medium text-gray-600">Lead Time:</dt>
                    <dd class="text-sm text-gray-900">{product.specifications.leadTime}</dd>
                  </div>
                )}
                {product.specifications.weight && (
                  <div class="flex justify-between py-2 border-b border-gray-100">
                    <dt class="text-sm font-medium text-gray-600">Weight:</dt>
                    <dd class="text-sm text-gray-900">{product.specifications.weight}</dd>
                  </div>
                )}
                {product.specifications.temperature && (
                  <div class="flex justify-between py-2">
                    <dt class="text-sm font-medium text-gray-600">Temperature Range:</dt>
                    <dd class="text-sm text-gray-900">{product.specifications.temperature}</dd>
                  </div>
                )}
              </dl>
            </div>
          </div>

          <!-- Features List -->
          <div class="bg-green-50 p-6 rounded-lg">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Key Features</h3>
            <ul class="grid grid-cols-1 gap-3">
              {product.features.map(feature => (
                <li class="flex items-start">
                  <i class="fas fa-check-circle text-green-500 mr-3 mt-0.5 flex-shrink-0"></i>
                  <span class="text-sm text-gray-700">{feature}</span>
                </li>
              ))}
            </ul>
          </div>

          <!-- Action Buttons -->
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="/contact" class="btn btn-primary flex-1 text-center">
              <i class="fas fa-quote-left mr-2"></i>
              Get Quote
            </a>
            <a href="https://wa.me/8801976724402" target="_blank" rel="noopener" class="btn btn-secondary flex-1 text-center">
              <i class="fab fa-whatsapp mr-2"></i>
              WhatsApp
            </a>
          </div>

          <!-- Additional Info -->
          <div class="bg-blue-50 p-4 rounded-lg">
            <div class="flex items-center text-blue-800">
              <i class="fas fa-info-circle mr-2"></i>
              <span class="font-medium">Need customization?</span>
            </div>
            <p class="text-blue-700 text-sm mt-1">
              Contact our design team for custom printing, sizes, or special requirements.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Detailed Description Section -->
  <section class="section bg-gray-50">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-6">Product Description</h2>
        <div class="prose prose-lg max-w-none">
          <p class="text-gray-700 leading-relaxed">{product.description}</p>
          
          <!-- Printing Options (if available) -->
          {product.specifications.printingOptions && product.specifications.printingOptions.length > 0 && (
            <div class="mt-6 p-6 bg-white rounded-lg border border-gray-200">
              <h3 class="text-xl font-semibold text-gray-900 mb-4">Custom Printing Options</h3>
              <ul class="grid grid-cols-1 md:grid-cols-2 gap-2">
                {product.specifications.printingOptions.map(option => (
                  <li class="flex items-center text-gray-700">
                    <i class="fas fa-print text-primary-500 mr-2 text-sm"></i>
                    {option}
                  </li>
                ))}
              </ul>
            </div>
          )}

          <!-- Colors (if available) -->
          {product.specifications.colors && product.specifications.colors.length > 0 && (
            <div class="mt-6 p-6 bg-white rounded-lg border border-gray-200">
              <h3 class="text-xl font-semibold text-gray-900 mb-4">Available Colors</h3>
              <div class="flex flex-wrap gap-2">
                {product.specifications.colors.map(color => (
                  <span class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-sm">{color}</span>
                ))}
              </div>
            </div>
          )}
        </div>
      </div>
    </div>
  </section>

  <!-- Related Products Section -->
  {relatedProducts.length > 0 && (
    <section class="section">
      <div class="container">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-8 text-center">Related Products</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {relatedProducts.map(relatedProduct => (
            <ProductCard
              title={relatedProduct.name}
              description={relatedProduct.shortDescription}
              image={relatedProduct.images[0]}
              link={`/product/${relatedProduct.slug}`}
            />
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Call to Action -->
  <CallToAction
    title="Interested in This Product?"
    description="Contact our team to discuss your requirements, get samples, or place your order today."
    buttonText="Get Quote Now"
    buttonLink="/contact"
    secondaryButtonText="Call Us"
    secondaryButtonLink="tel:+8801976724401"
  />
</Layout>

<!-- Structured Data for SEO -->
<script type="application/ld+json">
{
  "@context": "https://schema.org/",
  "@type": "Product",
  "name": "{product.name}",
  "description": "{product.shortDescription}",
  "image": "{product.images}",
  "brand": {
    "@type": "Brand",
    "name": "Joana Paper Product Industry"
  },
  "manufacturer": {
    "@type": "Organization",
    "name": "Joana Paper Product Industry",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "123 Industrial Area, Gazipur",
      "addressLocality": "Dhaka",
      "addressCountry": "Bangladesh"
    }
  },
  "offers": {
    "@type": "Offer",
    "availability": "https://schema.org/InStock",
    "priceCurrency": "BDT"
  }
}
</script>

<style>
  .prose h3 {
    @apply text-xl font-semibold mt-6 mb-3 text-gray-900;
  }
  
  .thumbnail-btn.active {
    @apply border-primary-500;
  }
  
  .aspect-w-16 {
    position: relative;
    padding-bottom: calc(var(--tw-aspect-h) / var(--tw-aspect-w) * 100%);
    --tw-aspect-w: 16;
  }

  .aspect-h-12 {
    --tw-aspect-h: 12;
  }
  
  .aspect-w-1 {
    --tw-aspect-w: 1;
  }
  
  .aspect-h-1 {
    --tw-aspect-h: 1;
  }
  
  .aspect-w-16 > *, .aspect-w-1 > * {
    position: absolute;
    height: 100%;
    width: 100%;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
  }
</style>

<script>
  // Image gallery functionality
  document.addEventListener('DOMContentLoaded', () => {
    const mainImage = document.getElementById('main-product-image');
    const thumbnails = document.querySelectorAll('.thumbnail-btn');
    
    thumbnails.forEach((thumb, index) => {
      thumb.addEventListener('click', () => {
        // Remove active class from all thumbnails
        thumbnails.forEach(t => t.classList.remove('active'));
        
        // Add active class to clicked thumbnail
        thumb.classList.add('active');
        
        // Update main image
        const newImageSrc = thumb.getAttribute('data-image');
        if (mainImage && newImageSrc) {
          mainImage.src = newImageSrc;
        }
      });
    });
    
    // Set first thumbnail as active by default
    if (thumbnails.length > 0) {
      thumbnails[0].classList.add('active');
    }
  });
</script>