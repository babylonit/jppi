---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ProductCard from '../components/ProductCard.astro';
import FeatureCard from '../components/FeatureCard.astro';
import CallToAction from '../components/CallToAction.astro';

// Wooden products
const woodenProducts = [
  {
    title: 'Wooden Plates',
    description: 'Handcrafted wooden plates made from sustainable hardwood for elegant dining.',
    image: 'https://images.pexels.com/photos/4553277/pexels-photo-4553277.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    link: '/product/wooden-plates'
  },
  {
    title: 'Wooden Tray',
    description: 'Beautiful serving trays perfect for breakfast, tea service, and food presentation.',
    image: 'https://images.pexels.com/photos/4553618/pexels-photo-4553618.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    link: '/product/wooden-trays'
  },
  {
    title: 'Cutlery Set',
    description: 'Complete wooden cutlery sets including forks, knives, and spoons.',
    image: 'https://images.pexels.com/photos/4226711/pexels-photo-4226711.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    link: '/product/cutlery-sets'
  },
  {
    title: 'Wooden Spoon',
    description: 'Individual wooden spoons ideal for cooking, serving, and eating.',
    image: 'https://images.pexels.com/photos/4226769/pexels-photo-4226769.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    link: '/product/wooden-spoons'
  },
  {
    title: 'Wooden Fork',
    description: 'Ergonomically designed wooden forks for comfortable dining experiences.',
    image: 'https://images.pexels.com/photos/4553327/pexels-photo-4553327.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    link: '/product/wooden-forks'
  },
  {
    title: 'Bamboo Brush',
    description: 'Eco-friendly bamboo brushes for cleaning and kitchen use.',
    image: 'https://images.pexels.com/photos/4226778/pexels-photo-4226778.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    link: '/product/bamboo-brushes'
  }
];

// Features
const features = [
  {
    title: 'Sustainable Materials',
    description: 'Made from responsibly sourced hardwood and fast-growing bamboo.',
    icon: 'fas fa-tree'
  },
  {
    title: 'Handcrafted Quality',
    description: 'Each piece is carefully crafted by skilled artisans for superior quality.',
    icon: 'fas fa-hand-holding-heart'
  },
  {
    title: 'Food Safe Finish',
    description: 'All products feature food-safe, natural finishes suitable for dining.',
    icon: 'fas fa-shield-alt'
  },
  {
    title: 'Durable Design',
    description: 'Built to last with proper care, reducing waste and replacement needs.',
    icon: 'fas fa-gem'
  },
  {
    title: 'Natural Beauty',
    description: 'Each piece showcases the unique grain patterns and natural beauty of wood.',
    icon: 'fas fa-palette'
  },
  {
    title: 'Easy Maintenance',
    description: 'Simple care instructions for long-lasting use and natural preservation.',
    icon: 'fas fa-tools'
  }
];

// SEO Metadata
const title = "Wooden & Bamboo Products";
const description = "Sustainable wooden plates, trays, cutlery sets, and bamboo brushes. Handcrafted eco-friendly tableware made from responsibly sourced materials.";
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <Hero
    title="Wooden & Bamboo Products"
    subtitle="Discover the timeless beauty and sustainability of handcrafted wooden tableware and bamboo accessories."
    backgroundImage="https://images.pexels.com/photos/4226711/pexels-photo-4226711.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
  />
  
  <!-- Intro Section -->
  <section class="section">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Timeless Craftsmanship Meets Modern Sustainability</h2>
        <p class="text-lg text-gray-600 mb-6">
          Our wooden and bamboo products combine traditional craftsmanship with contemporary design 
          to create functional, beautiful tableware that respects both aesthetics and the environment. 
          Each piece tells a story of sustainable living and mindful consumption.
        </p>
        <p class="text-lg text-gray-600 mb-6">
          From elegant wooden plates that enhance your dining experience to practical bamboo brushes 
          that support eco-friendly cleaning, our collection offers sustainable alternatives that 
          don't compromise on quality or style.
        </p>
      </div>
    </div>
  </section>
  
  <!-- Products Section -->
  <section class="section bg-gray-50">
    <div class="container">
      <h2 class="section-title">Wooden & Bamboo Collection</h2>
      <p class="section-subtitle">Handcrafted products that bring natural warmth to your daily life.</p>
      
      <div class="mt-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {woodenProducts.map(product => (
          <ProductCard 
            title={product.title} 
            description={product.description} 
            image={product.image} 
            link={product.link} 
          />
        ))}
      </div>
    </div>
  </section>
  
  <!-- Features Section -->
  <section class="section">
    <div class="container">
      <h2 class="section-title">Why Choose Wooden & Bamboo Products?</h2>
      <p class="section-subtitle">Sustainable benefits that enhance your lifestyle while protecting the environment.</p>
      
      <div class="mt-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {features.map(feature => (
          <FeatureCard 
            title={feature.title} 
            description={feature.description} 
            icon={feature.icon} 
          />
        ))}
      </div>
    </div>
  </section>
  
  <!-- Materials Section -->
  <section class="section bg-gray-50">
    <div class="container">
      <h2 class="section-title">Premium Materials</h2>
      <p class="section-subtitle">We carefully select materials that combine beauty, functionality, and sustainability.</p>
      
      <div class="mt-12 grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="bg-white p-8 rounded-lg shadow-md border-l-4 border-amber-500">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-amber-100 rounded-full flex items-center justify-center mr-4">
              <i class="fas fa-tree text-amber-600 text-xl"></i>
            </div>
            <h3 class="text-2xl font-semibold text-gray-900">Hardwood Selection</h3>
          </div>
          <p class="text-gray-600 mb-4">
            Our wooden products are crafted from carefully selected hardwoods including teak, 
            acacia, and mango wood. These materials are chosen for their durability, natural 
            beauty, and sustainable sourcing practices.
          </p>
          <ul class="space-y-2 text-gray-600">
            <li class="flex items-start">
              <i class="fas fa-check h-5 w-5 text-amber-500 mr-2 mt-0.5"></i>
              FSC-certified sustainable sources
            </li>
            <li class="flex items-start">
              <i class="fas fa-check h-5 w-5 text-amber-500 mr-2 mt-0.5"></i>
              Natural resistance to moisture and bacteria
            </li>
            <li class="flex items-start">
              <i class="fas fa-check h-5 w-5 text-amber-500 mr-2 mt-0.5"></i>
              Beautiful grain patterns and natural colors
            </li>
            <li class="flex items-start">
              <i class="fas fa-check h-5 w-5 text-amber-500 mr-2 mt-0.5"></i>
              Long-lasting durability with proper care
            </li>
          </ul>
        </div>
        
        <div class="bg-white p-8 rounded-lg shadow-md border-l-4 border-green-500">
          <div class="flex items-center mb-4">
            <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center mr-4">
              <i class="fas fa-seedling text-green-600 text-xl"></i>
            </div>
            <h3 class="text-2xl font-semibold text-gray-900">Bamboo Benefits</h3>
          </div>
          <p class="text-gray-600 mb-4">
            Bamboo is one of the most sustainable materials on Earth, growing up to 30 times 
            faster than traditional hardwood. Our bamboo products offer exceptional strength 
            while maintaining a minimal environmental footprint.
          </p>
          <ul class="space-y-2 text-gray-600">
            <li class="flex items-start">
              <i class="fas fa-check h-5 w-5 text-green-500 mr-2 mt-0.5"></i>
              Fastest-growing renewable resource
            </li>
            <li class="flex items-start">
              <i class="fas fa-check h-5 w-5 text-green-500 mr-2 mt-0.5"></i>
              Naturally antimicrobial properties
            </li>
            <li class="flex items-start">
              <i class="fas fa-check h-5 w-5 text-green-500 mr-2 mt-0.5"></i>
              Lightweight yet stronger than steel
            </li>
            <li class="flex items-start">
              <i class="fas fa-check h-5 w-5 text-green-500 mr-2 mt-0.5"></i>
              Biodegradable at end of life cycle
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Care Instructions Section -->
  <section class="section">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div class="order-2 lg:order-1">
          <img 
            src="https://images.pexels.com/photos/4226778/pexels-photo-4226778.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" 
            alt="Wooden products care and maintenance" 
            class="rounded-lg shadow-xl w-full"
          />
        </div>
        
        <div class="order-1 lg:order-2">
          <h2 class="text-3xl md:text-4xl font-bold mb-6">Care Instructions</h2>
          <p class="text-lg text-gray-600 mb-6">
            Proper care ensures your wooden and bamboo products will last for years while 
            maintaining their natural beauty. Follow these simple guidelines to preserve 
            the quality and appearance of your sustainable tableware.
          </p>
          
          <div class="space-y-4">
            <div class="flex items-start">
              <div class="flex-shrink-0 w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center mr-4">
                <i class="fas fa-hand-sparkles text-blue-600 text-sm"></i>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">Hand Wash Only</h3>
                <p class="text-gray-600">Wash with warm soapy water and dry immediately. Avoid soaking.</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="flex-shrink-0 w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center mr-4">
                <i class="fas fa-oil-can text-blue-600 text-sm"></i>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">Oil Treatment</h3>
                <p class="text-gray-600">Apply food-safe mineral oil monthly to maintain moisture and luster.</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="flex-shrink-0 w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center mr-4">
                <i class="fas fa-home text-blue-600 text-sm"></i>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">Proper Storage</h3>
                <p class="text-gray-600">Store in a dry place away from direct sunlight and extreme temperatures.</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="flex-shrink-0 w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center mr-4">
                <i class="fas fa-exclamation-triangle text-blue-600 text-sm"></i>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">Avoid</h3>
                <p class="text-gray-600">Never use dishwasher, microwave, or harsh chemicals that can damage the wood.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Applications Section -->
  <section class="section bg-gray-50">
    <div class="container">
      <h2 class="section-title">Perfect Applications</h2>
      <p class="section-subtitle">Versatile wooden and bamboo products for various settings and occasions.</p>
      
      <div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white p-6 rounded-lg shadow-md">
          <div class="w-16 h-16 bg-amber-100 rounded-full flex items-center justify-center mb-4">
            <i class="fas fa-utensils text-amber-600 text-2xl"></i>
          </div>
          <h3 class="text-xl font-semibold mb-3">Fine Dining</h3>
          <ul class="space-y-2 text-gray-600 text-sm">
            <li>• Upscale restaurants and resorts</li>
            <li>• Farm-to-table dining experiences</li>
            <li>• Boutique hotels and spas</li>
            <li>• Artisan food presentations</li>
          </ul>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-md">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mb-4">
            <i class="fas fa-home text-green-600 text-2xl"></i>
          </div>
          <h3 class="text-xl font-semibold mb-3">Home Living</h3>
          <ul class="space-y-2 text-gray-600 text-sm">
            <li>• Everyday family dining</li>
            <li>• Special occasion table settings</li>
            <li>• Kitchen prep and serving</li>
            <li>• Sustainable lifestyle choices</li>
          </ul>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-md">
          <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mb-4">
            <i class="fas fa-gift text-blue-600 text-2xl"></i>
          </div>
          <h3 class="text-xl font-semibold mb-3">Gifts & Retail</h3>
          <ul class="space-y-2 text-gray-600 text-sm">
            <li>• Corporate gifts and awards</li>
            <li>• Wedding and housewarming gifts</li>
            <li>• Eco-conscious retail products</li>
            <li>• Artisan craft market items</li>
          </ul>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Call to Action -->
  <CallToAction
    title="Embrace Natural Living"
    description="Discover the beauty and sustainability of our handcrafted wooden and bamboo products."
    buttonText="Explore Collection"
    buttonLink="/contact"
    secondaryButtonText="Custom Orders"
    secondaryButtonLink="/contact?type=custom-wooden"
  />
</Layout>