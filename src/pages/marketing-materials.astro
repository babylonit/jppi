---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ProductCard from '../components/ProductCard.astro';
import FeatureCard from '../components/FeatureCard.astro';
import CallToAction from '../components/CallToAction.astro';

// Marketing materials products
const marketingMaterialsProducts = [
  {
    title: 'Brochures',
    description: 'Professional tri-fold and bi-fold brochures for effective marketing communication.',
    image: 'https://images.pexels.com/photos/4466176/pexels-photo-4466176.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    link: '/product/brochures'
  },
  {
    title: 'Flyers',
    description: 'Eye-catching single-page promotional materials for events and campaigns.',
    image: 'https://images.pexels.com/photos/6224/hands-people-woman-working.jpg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    link: '/product/flyers'
  },
  {
    title: 'Catalogs',
    description: 'Professional product catalogs with perfect binding and high-quality imagery.',
    image: 'https://images.pexels.com/photos/5699516/pexels-photo-5699516.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    link: '/product/catalogs'
  },
  {
    title: 'Banners',
    description: 'Large format banners for events, trade shows, and outdoor advertising.',
    image: 'https://images.pexels.com/photos/3183150/pexels-photo-3183150.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    link: '/product/banners'
  },
  {
    title: 'Stickers',
    description: 'Custom stickers with various materials and adhesive options for branding.',
    image: 'https://images.pexels.com/photos/7125005/pexels-photo-7125005.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    link: '/product/stickers'
  },
  {
    title: 'Hang Tags',
    description: 'Premium hang tags for retail products with custom shapes and finishes.',
    image: 'https://images.pexels.com/photos/5872298/pexels-photo-5872298.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2',
    link: '/product/hang-tags'
  }
];

// Features
const features = [
  {
    title: 'High-Impact Design',
    description: 'Eye-catching designs that capture attention and communicate your message effectively.',
    icon: 'fas fa-eye'
  },
  {
    title: 'Premium Printing',
    description: 'Superior print quality with vibrant colors and sharp details that make an impression.',
    icon: 'fas fa-print'
  },
  {
    title: 'Versatile Formats',
    description: 'Multiple sizes and formats available to suit different marketing objectives.',
    icon: 'fas fa-expand-arrows-alt'
  },
  {
    title: 'Fast Production',
    description: 'Quick turnaround times to meet your campaign deadlines and market opportunities.',
    icon: 'fas fa-rocket'
  },
  {
    title: 'Cost-Effective',
    description: 'Competitive pricing for bulk orders making marketing campaigns budget-friendly.',
    icon: 'fas fa-dollar-sign'
  },
  {
    title: 'Creative Support',
    description: 'Professional design assistance to maximize the impact of your marketing materials.',
    icon: 'fas fa-lightbulb'
  }
];

// SEO Metadata
const title = "Marketing Materials Printing";
const description = "Professional marketing materials printing including brochures, flyers, catalogs, banners, stickers, and hang tags. High-quality printing for effective marketing campaigns.";
---

<Layout title={title} description={description}>
  <!-- Hero Section -->
  <Hero
    title="Marketing Materials That Make an Impact"
    subtitle="Powerful printed marketing materials that capture attention, communicate your message, and drive results."
    backgroundImage="https://images.pexels.com/photos/4466176/pexels-photo-4466176.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
  />
  
  <!-- Intro Section -->
  <section class="section">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6">Effective Marketing Through Print</h2>
        <p class="text-lg text-gray-600 mb-6">
          In today's digital world, high-quality printed marketing materials stand out and create 
          tangible connections with your audience. Our marketing materials combine creative design 
          with superior printing quality to help your message make a lasting impression.
        </p>
        <p class="text-lg text-gray-600 mb-6">
          From brochures that explain your services to banners that command attention at events, 
          we provide comprehensive printing solutions that support your marketing objectives and 
          help you reach your target audience effectively.
        </p>
      </div>
    </div>
  </section>
  
  <!-- Products Section -->
  <section class="section bg-gray-50">
    <div class="container">
      <h2 class="section-title">Marketing Materials Products</h2>
      <p class="section-subtitle">Comprehensive printing solutions for all your marketing and promotional needs.</p>
      
      <div class="mt-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {marketingMaterialsProducts.map(product => (
          <ProductCard 
            title={product.title} 
            description={product.description} 
            image={product.image} 
            link={product.link} 
          />
        ))}
      </div>
    </div>
  </section>
  
  <!-- Features Section -->
  <section class="section">
    <div class="container">
      <h2 class="section-title">Why Choose Our Marketing Materials?</h2>
      <p class="section-subtitle">Quality and creativity that amplifies your marketing message.</p>
      
      <div class="mt-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {features.map(feature => (
          <FeatureCard 
            title={feature.title} 
            description={feature.description} 
            icon={feature.icon} 
          />
        ))}
      </div>
    </div>
  </section>
  
  <!-- Applications Section -->
  <section class="section bg-gray-50">
    <div class="container">
      <h2 class="section-title">Marketing Applications</h2>
      <p class="section-subtitle">Versatile marketing materials for diverse promotional strategies.</p>
      
      <div class="mt-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-primary-500">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mb-4">
            <i class="fas fa-bullhorn text-primary-600 text-2xl"></i>
          </div>
          <h3 class="text-xl font-semibold mb-3">Event Marketing</h3>
          <ul class="space-y-2 text-gray-600 text-sm">
            <li>• Trade show banners and displays</li>
            <li>• Event programs and schedules</li>
            <li>• Promotional flyers and handouts</li>
            <li>• Branded stickers and giveaways</li>
          </ul>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-primary-500">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mb-4">
            <i class="fas fa-store text-primary-600 text-2xl"></i>
          </div>
          <h3 class="text-xl font-semibold mb-3">Retail Marketing</h3>
          <ul class="space-y-2 text-gray-600 text-sm">
            <li>• Product catalogs and lookbooks</li>
            <li>• Point-of-sale materials</li>
            <li>• Hang tags and product labels</li>
            <li>• In-store promotional signage</li>
          </ul>
        </div>
        
        <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-primary-500">
          <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mb-4">
            <i class="fas fa-building text-primary-600 text-2xl"></i>
          </div>
          <h3 class="text-xl font-semibold mb-3">Corporate Marketing</h3>
          <ul class="space-y-2 text-gray-600 text-sm">
            <li>• Company brochures and profiles</li>
            <li>• Product specification sheets</li>
            <li>• Annual reports and presentations</li>
            <li>• Conference materials and folders</li>
          </ul>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Product Details Section -->
  <section class="section">
    <div class="container">
      <h2 class="section-title">Product Specifications</h2>
      <p class="section-subtitle">Detailed information about our marketing materials options.</p>
      
      <div class="mt-12 grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="space-y-6">
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="px-6 py-4 bg-primary-50 border-b border-primary-100">
              <h3 class="text-lg font-semibold text-primary-800">Brochures & Flyers</h3>
            </div>
            <div class="p-6">
              <div class="space-y-3 text-sm">
                <div class="flex justify-between">
                  <span class="font-medium">Sizes:</span>
                  <span>A4, A5, A6, DL, Custom</span>
                </div>
                <div class="flex justify-between">
                  <span class="font-medium">Paper:</span>
                  <span>130-300 GSM</span>
                </div>
                <div class="flex justify-between">
                  <span class="font-medium">Folding:</span>
                  <span>Bi-fold, Tri-fold, Z-fold</span>
                </div>
                <div class="flex justify-between">
                  <span class="font-medium">Finish:</span>
                  <span>Matte, Gloss, Satin</span>
                </div>
                <div class="flex justify-between">
                  <span class="font-medium">MOQ:</span>
                  <span>500 pieces</span>
                </div>
              </div>
            </div>
          </div>
          
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="px-6 py-4 bg-primary-50 border-b border-primary-100">
              <h3 class="text-lg font-semibold text-primary-800">Catalogs</h3>
            </div>
            <div class="p-6">
              <div class="space-y-3 text-sm">
                <div class="flex justify-between">
                  <span class="font-medium">Sizes:</span>
                  <span>A4, A5, Square formats</span>
                </div>
                <div class="flex justify-between">
                  <span class="font-medium">Pages:</span>
                  <span>8-100+ pages</span>
                </div>
                <div class="flex justify-between">
                  <span class="font-medium">Binding:</span>
                  <span>Saddle-stitch, Perfect bound</span>
                </div>
                <div class="flex justify-between">
                  <span class="font-medium">Cover:</span>
                  <span>250-350 GSM</span>
                </div>
                <div class="flex justify-between">
                  <span class="font-medium">MOQ:</span>
                  <span>250 pieces</span>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <div class="space-y-6">
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="px-6 py-4 bg-primary-50 border-b border-primary-100">
              <h3 class="text-lg font-semibold text-primary-800">Banners</h3>
            </div>
            <div class="p-6">
              <div class="space-y-3 text-sm">
                <div class="flex justify-between">
                  <span class="font-medium">Materials:</span>
                  <span>Vinyl, Fabric, Paper</span>
                </div>
                <div class="flex justify-between">
                  <span class="font-medium">Sizes:</span>
                  <span>Custom sizes available</span>
                </div>
                <div class="flex justify-between">
                  <span class="font-medium">Finishing:</span>
                  <span>Hemming, Grommets, Poles</span>
                </div>
                <div class="flex justify-between">
                  <span class="font-medium">Usage:</span>
                  <span>Indoor/Outdoor options</span>
                </div>
                <div class="flex justify-between">
                  <span class="font-medium">MOQ:</span>
                  <span>1 piece</span>
                </div>
              </div>
            </div>
          </div>
          
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="px-6 py-4 bg-primary-50 border-b border-primary-100">
              <h3 class="text-lg font-semibold text-primary-800">Stickers & Labels</h3>
            </div>
            <div class="p-6">
              <div class="space-y-3 text-sm">
                <div class="flex justify-between">
                  <span class="font-medium">Materials:</span>
                  <span>Paper, Vinyl, Polyester</span>
                </div>
                <div class="flex justify-between">
                  <span class="font-medium">Shapes:</span>
                  <span>Round, Square, Custom die-cut</span>
                </div>
                <div class="flex justify-between">
                  <span class="font-medium">Adhesive:</span>
                  <span>Permanent, Removable</span>
                </div>
                <div class="flex justify-between">
                  <span class="font-medium">Finish:</span>
                  <span>Matte, Gloss, Clear</span>
                </div>
                <div class="flex justify-between">
                  <span class="font-medium">MOQ:</span>
                  <span>1,000 pieces</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Design Process Section -->
  <section class="section bg-gray-50">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div class="order-2 lg:order-1">
          <img 
            src="https://images.pexels.com/photos/5699516/pexels-photo-5699516.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2" 
            alt="Marketing materials design process" 
            class="rounded-lg shadow-xl w-full"
          />
        </div>
        
        <div class="order-1 lg:order-2">
          <h2 class="text-3xl md:text-4xl font-bold mb-6">Our Design & Production Process</h2>
          <p class="text-lg text-gray-600 mb-6">
            We follow a systematic approach to ensure your marketing materials achieve maximum 
            impact and meet your specific objectives. Our experienced team guides you through 
            every step from concept to delivery.
          </p>
          
          <div class="space-y-4">
            <div class="flex items-start">
              <div class="flex-shrink-0 w-8 h-8 bg-primary-500 text-white rounded-full flex items-center justify-center mr-4">
                <span class="text-sm font-bold">1</span>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">Consultation & Planning</h3>
                <p class="text-gray-600">Understanding your objectives, target audience, and campaign requirements.</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="flex-shrink-0 w-8 h-8 bg-primary-500 text-white rounded-full flex items-center justify-center mr-4">
                <span class="text-sm font-bold">2</span>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">Creative Design</h3>
                <p class="text-gray-600">Developing compelling designs that align with your brand and message.</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="flex-shrink-0 w-8 h-8 bg-primary-500 text-white rounded-full flex items-center justify-center mr-4">
                <span class="text-sm font-bold">3</span>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">Production & Quality Control</h3>
                <p class="text-gray-600">High-quality printing with strict quality control at every stage.</p>
              </div>
            </div>
            
            <div class="flex items-start">
              <div class="flex-shrink-0 w-8 h-8 bg-primary-500 text-white rounded-full flex items-center justify-center mr-4">
                <span class="text-sm font-bold">4</span>
              </div>
              <div>
                <h3 class="font-semibold text-gray-900 mb-1">Delivery & Support</h3>
                <p class="text-gray-600">Timely delivery with ongoing support for your marketing campaigns.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Call to Action -->
  <CallToAction
    title="Ready to Amplify Your Marketing?"
    description="Create powerful marketing materials that capture attention and drive results for your business campaigns."
    buttonText="Start Your Project"
    buttonLink="/contact"
    secondaryButtonText="View Design Portfolio"
    secondaryButtonLink="/gallery"
  />
</Layout>