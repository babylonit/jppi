<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Category card switching
    const categoryCards = document.querySelectorAll('.category-card');
    const categoryContents = document.querySelectorAll('.category-content');
    
    categoryCards.forEach(card => {
      card.addEventListener('click', () => {
        const category = card.getAttribute('data-category');
        
        // Update active card
        categoryCards.forEach(c => {
          c.classList.remove('active', 'bg-primary-500', 'text-white', 'shadow-md');
          c.classList.add('bg-white', 'text-gray-700', 'border', 'border-gray-300');
        });
        
        // Activate clicked card
        card.classList.add('active', 'bg-primary-500', 'text-white', 'shadow-md');
        card.classList.remove('bg-white', 'text-gray-700', 'border', 'border-gray-300');
        
        // Show selected content with fade effect
        categoryContents.forEach(content => {
          content.classList.add('hidden');
          content.classList.remove('block');
        });
        
        const targetContent = document.getElementById(`tab-${category}`);
        if (targetContent) {
          setTimeout(() => {
            targetContent.classList.remove('hidden');
            targetContent.classList.add('block');
          }, 150);
        }
      });
    });
    
    // FAQ accordion with improved animation
    const faqQuestions = document.querySelectorAll('.faq-question');
    
    faqQuestions.forEach(question => {
      question.addEventListener('click', () => {
        const isActive = question.classList.contains('active');
        
        // Close all other FAQs in the same category (optional)
        const category = question.getAttribute('data-category');
        const categoryQuestions = document.querySelectorAll(`.faq-question[data-category="${category}"]`);
        categoryQuestions.forEach(q => {
          q.classList.remove('active');
        });
        
        // Toggle current question
        if (!isActive) {
          question.classList.add('active');
        }
      });
    });
  });
</script>