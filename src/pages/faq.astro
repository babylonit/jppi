  />
  
  <!-- FAQ Section with Tabs -->
  <section class="section">
    <div class="container">
      <div class="mb-8 text-center">
        <h2 class="text-3xl font-bold mb-4">How Can We Help You?</h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          Browse through these frequently asked questions to find quick answers to common inquiries.
          Questions and answers are provided in both English and Bengali.
        </p>
      </div>
      
      <!-- FAQ Section -->
      <div class="mt-12 max-w-6xl mx-auto">
        <!-- Category Navigation -->
        <div class="flex flex-wrap justify-center gap-3 mb-8">
          <button 
            class="category-card cursor-pointer rounded-lg transition-all duration-200 px-4 py-3 text-sm font-medium flex items-center space-x-2 bg-primary-500 text-white shadow-md"
            data-category="all"
          >
            <i class="fas fa-list text-sm"></i>
            <span>All FAQs</span>
            <span class="text-xs opacity-75">({totalFaqCount})</span>
          </button>
          {categories.map((category, index) => (
            <button 
              class="category-card cursor-pointer rounded-lg transition-all duration-200 px-4 py-3 text-sm font-medium flex items-center space-x-2 bg-white text-gray-700 border border-gray-300 hover:border-primary-300 hover:bg-primary-50"
              data-category={category.id}
            >
              <i class={`${category.icon} text-sm`}></i>
              <span>{category.name}</span>
              <span class="text-xs opacity-75">({faqData[category.id].length})</span>
            </button>
          ))}
        </div>
        
        <!-- FAQ Content with Fixed Height Container -->
        <div class="bg-white rounded-xl shadow-lg overflow-hidden">
          <div class="min-h-[600px]">
